{
  "headers": [
    {
      "source": "/.git/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    },
    {
      "source": "/.svn/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    }
  ]
  ,
  
  "routes": [
    { "src": "/\\.gitignore", "status": 404 },
    { "src": "/\\.git(/.*)?", "status": 404 },
    { "src": "/\\.svn(/.*)?", "status": 404 }
  ],

  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
